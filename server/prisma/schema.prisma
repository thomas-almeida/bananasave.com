generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model survey {
  id              String            @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String
  questions       questions[]
  surveyResponses surveyResponses[]
}

model questions {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  question String
  type     String
  answer   Json
  surveyId String  @db.ObjectId
  survey   survey? @relation(fields: [surveyId], references: [id])
}

model wishlist {
  id               String           @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  age              Int
  whatsappNumber   String
  surveyResponseId String           @db.ObjectId
  surveyResponse   surveyResponses? @relation(fields: [surveyResponseId], references: [id])
}

model surveyResponses {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  surveyId  String     @db.ObjectId
  answers   Json
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  survey    survey?    @relation(fields: [surveyId], references: [id])
  wishlist  wishlist[]
}
